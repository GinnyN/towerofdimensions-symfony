<h2><span class="back-menu"><-</span> Mercenaries </h2>
{% for merc in mercenaries %}
<article class="mercenario" id={{ merc.id }}>
	<figure>
		<img src="{{ asset(merc.busto) }}"/>
	</figure>
	<ul>
		<li>{{ merc.name }}</li>
		<li> HP: {{ merc.hp }}</li>
		<li> Level: {{ merc.level }}/ EXP: {{ merc.exp }}</li>
	</ul>
</article>
{% endfor %}